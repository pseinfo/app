{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@pseinfo/app/controller/*": [ "src/controller/*" ],
      "@pseinfo/app/core/*": [ "src/core/*" ],
      "@pseinfo/app/middleware/*": [ "src/middleware/*" ],
      "@pseinfo/app/types": [ "src/types" ],
      "@pseinfo/app/utils/*": [ "src/utils/*" ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
