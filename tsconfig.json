{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@pseinfo/app/services/*": [ "src/services/*" ],
      "@pseinfo/app/types/*": [ "src/types/*" ],
      "@pseinfo/app/utils/*": [ "src/utils/*" ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
